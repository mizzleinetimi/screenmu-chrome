{
    "manifest_version": 3,
    "name": "ScreenMu",
    "version": "0.1.0",
    "description": "Screen Studio-style recording with auto-zoom and cursor tracking",
    "permissions": [
        "tabCapture",
        "activeTab",
        "storage",
        "offscreen"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "src/background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "src/content.js"
            ],
            "run_at": "document_start"
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "src/offscreen.html"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}